<%= simple_form_for(@monster) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :category, as: :select, collection: Monster::CATEGORIES, prompt: "Choose type" %>
      <%= f.input :team_id, as: :select, collection: Team.where(user_id: current_user.id).collect { |t| [t.name, t.id] }, prompt: "Choose type" %>
      <%= f.input :power %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>

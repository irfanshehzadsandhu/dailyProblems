I"„(function() {
  var toggleGainOrLossFields, toggleOptionOrFutureFields;

  toggleGainOrLossFields = function() {
    if ($('#trade_gain_or_loss').val() === 'Gain') {
      $('.trade_gain_or_loss_amount label').text('Gain Amount');
      $('#trade_gain_or_loss_amount').show();
      $('#trade_gain_reasons').show();
      $('#trade_loss_reasons').hide();
    } else if ($('#trade_gain_or_loss').val() === 'Loss') {
      $('.trade_gain_or_loss_amount label').text('Loss Amount');
      $('#trade_gain_or_loss_amount').show();
      $('#trade_gain_reasons').hide();
      $('#trade_loss_reasons').show();
    } else {
      $('#trade_gain_or_loss_amount').hide();
    }
  };

  toggleOptionOrFutureFields = function() {
    if ($('#trade_trade_type').val() === 'Option') {
      $('#trade_option_or_future_fields').show();
      $('#trade_only_option_fields').show();
    } else if ($('#trade_trade_type').val() === 'Future') {
      $('#trade_option_or_future_fields').show();
      $('#trade_only_option_fields').hide();
    } else {
      $('#trade_option_or_future_fields').hide();
    }
  };

  $(document).on('turbolinks:load', function() {
    toggleGainOrLossFields();
    toggleOptionOrFutureFields();
    $('#trade_gain_or_loss').change(function() {
      toggleGainOrLossFields();
    });
    $('#trade_trade_type').change(function() {
      toggleOptionOrFutureFields();
    });
  });

}).call(this);
